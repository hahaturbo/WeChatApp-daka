.skin {
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.skin-swider {
  position: relative;
  width: 750rpx;
  height: 970rpx;
  overflow: hidden;
}

.skin-image-swider {
  position: absolute;
  left: 75rpx;
  height: 970rpx;
  width: 600rpx;
  z-index: 10;
  transition: all .9s;
}

.skin-image-swider.left {
  transform: translateX(-40%) scale(0.8);
  opacity: 0.7;
  z-index: 1;
}

.skin-image-swider.right {
  transform: translateX(40%) scale(0.8);
  opacity: 0.7;
  z-index: 1;
}

.skin-image-swider image {
  width: 100%;
  height: 100%;
}


.skin-button {
  display: flex;
  flex-direction: column;
  align-items: center;
}

