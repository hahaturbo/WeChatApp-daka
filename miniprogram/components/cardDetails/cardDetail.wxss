/* components/cardDetails/cardDetail.wxss */
.cardDetail{
  height: 100%;
  border-radius: 50rpx 50rpx 0rpx 0rpx;
  background: #fff;  
  width: 720rpx;
}
.card_title {
  text-align: center;
  /* font-size: 45rpx; */
  padding: 3%;
}

.calander {
  /* background-color: aqua;
  height: 30vh; */
  width: 100%;
  
  text-align: center;
  /* font-size: 35rpx; */
  box-sizing: border-box;
  border: #7b7575 4rpx solid;
  border-left: 0;
  border-right: 0;
  margin-bottom:20rpx;
  padding: 2% 0;
}

.calander_top {
  display: flex;
  line-height: 50rpx;
  text-align: center;
  padding: 5rpx;
  box-sizing: border-box;
}

.lastmonth {
  flex: 1;
  /* background: #f5f5f5; */
  border-radius: 10rpx;
  text-align: left;

}

.nextmonth {
  flex: 1;
  /* background: #f5f5f5; */
  border-radius: 10rpx;
  text-align: right;
}

.date_title {
  min-width: 80%;
  /* font-size: 45rpx; */
  flex: 1;
  text-align: center;
}

.header {
  display: flex;
  text-align: center;
  /* padding: 20rpx 10rpx; */
  padding: 5rpx 0;
  box-sizing: border-box;
  /* border-top: 1rpx solid #e0e0e0;
  border-bottom: 1rpx solid #e0e0e0; */
  /* background: #f5f5f5; */
}

.weektext {
  flex: 1;
  border:solid 5rpx rgba(0, 0, 0, 0);
}

.date {
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx, 10rpx;
  box-sizing: border-box;
}

.grid {
  display: inline-block;
  width: 13.69999%;
  line-height: 40rpx;
  position: relative;
  margin: 2rpx;
  /* padding: 3rpx 0; */
  /* border:solid 3rpx rgba(255, 255, 255, 0);
  border-left: 0;
  border-right: 0; */
  /* z-index: 1; */
}

.self {
  position: absolute;
  top: -4rpx;
  right: -4rpx;
  width: 15rpx;
  height: 15rpx;
  border-radius: 50%;
  background: rgb(255, 102, 102);
  border: 5rpx solid rgb(255, 102, 102);
}

.gray {
  color: #ccc;
}
.wrap{
  border:solid 5rpx rgba(0, 0, 0, 0);
}
.wrap.othersigned{
  border-color: rgb(255, 204, 102);
}
.wrap.signed {
  background: rgb(255, 204, 102);
  /* border-radius: 10rpx; */
  /* border-color: yellow;
  border: solid 2px yellow; */
  width: 85%;
  margin: 0 auto;
}


.wrap.select {
  /* background: rgb(49, 120, 228); */
  border-radius: 22rpx;
  /* border-color: yellow; */
  border: solid 5rpx rgb(70, 225, 96);
  /* color: #fff; */
  /* width: 95%; */
  /* margin: 0 auto; */
}

.group.select {
  position: absolute;
  background-color: rgb(255, 255, 255);
  /* top: 2rpx; */
  margin-top: 15rpx;
  /* width: 350rpx; */
  /* height: 80rpx; */
  z-index: 99999;
  border: solid 3rpx rgb(255, 204, 102);
