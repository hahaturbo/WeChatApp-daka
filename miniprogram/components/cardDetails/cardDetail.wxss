}

.userimgs {
  display: flex;
  padding:5rpx;
}

.user_img {
  flex: 1;
  /* width: 24%; */
  margin: 0 5rpx;
  border: solid rgb(127, 127, 127) 2.5rpx;
  border-radius: 15rpx;
  height: 50rpx;
  width: 50rpx;
}