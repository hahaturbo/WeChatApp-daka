/* miniprogram/pages/carddetails/carddetails.wxss */
.card_title {
  text-align: center;
  font-size: 50rpx;
}

.calander {
  width: 100%;
  text-align: center;
  font-size: 50rpx;
  box-sizing: border-box;
  border: #ccc 5rpx solid;
  padding: 2% 0;
}

.calander_top {
  display: flex;
  line-height: 70rpx;
  font-size: 50rpx;
  text-align: center;
  padding: 0 15rpx;
  box-sizing: border-box;
}

.lastmonth {
  flex: 1;
  padding: 0 20rpx;
  background: #f5f5f5;
  border-radius: 10rpx;
  text-align: left;

}

.nextmonth {
  flex: 1;
  padding: 0 20rpx;
  background: #f5f5f5;
  border-radius: 10rpx;
  text-align: right;
}

.date_title {
  min-width: 550rpx;
  flex: 1;
  text-align: center;
}

.header {
  display: flex;
  text-align: center;
  padding: 20rpx 10rpx;
  box-sizing: border-box;
  border-top: 1rpx solid #e0e0e0;
  border-bottom: 1rpx solid #e0e0e0;
  background: #f5f5f5;
}

.weektext {
  flex: 1;
}

.date {
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx, 10rpx;
  box-sizing: border-box;
}

.grid {
  display: inline-block;
  width: 14.2%;
  line-height: 70rpx;
  position: relative;
  z-index: 1;
}

.self {
  position: absolute;
  top: 0rpx;
  right: 0rpx;
  width: 15rpx;
  height: 15rpx;
  border-radius: 50%;
  background: rgb(49, 120, 228);
  border: 3rpx solid #ccc;
}

.gray {
  color: #ccc;
}

.wrap.select {
  background: rgb(49, 120, 228);
  border-radius: 10rpx;
  color: #fff;
  width: 80%;
  margin: 0 auto;
}

.card_otherdetails {

  font-size: 50rpx;
  padding: 2% 0 2% 2%;
  margin: auto;
}

