/* pages/setting/setting.wxss */
.settings {
  height: 89vh;
  width: 100%;
  background-color: #fff;
  border-radius: 50rpx 50rpx 0 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  transition: all 1s ease;
  box-sizing: border-box;
}

/* 设置css */
.user {
  height: 250rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  box-sizing: border-box;
  padding: 50rpx;
  margin-bottom: 50rpx;

}

.user_img {
  width: 150rpx;
  height: 150rpx;
  border-radius: 30rpx;
  overflow: hidden;
  text-align: center;
  border: 4rpx solid #ed7c31bd;
}

.userzonetext {
  flex: 1 1 auto;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 0 50rpx;
}

.user_name {
  line-height: 70rpx;
  font-size: 70rpx;
}

.card {
  border-top: 3rpx solid #eee;
  height: 100rpx;
  width: 100%;
  background: #fff;
  display: flex;
  box-sizing: border-box;
  padding: 50rpx;
}

.card:last-child {
  border-bottom: 3rpx solid #eee;
}

.card navigator {
  flex: 1;
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
}

.right_text {
  flex: 1 1 auto;
  text-align: right;
  display: flex;
  justify-content: flex-end;
}

.arrow {
  width: 15rpx;
  height: 15rpx;
  border: 3rpx solid rgb(0, 0, 0);
  border-width: 0 3.5rpx 3.5rpx 0;
  transform: rotate(-45deg);
}