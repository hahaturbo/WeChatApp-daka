/* pages/setting/setting.wxss */
.settings {
  height: 90vh;
  width: 100%;
  background-color: #fff;
  border-radius: 50rpx 50rpx 0 0;
  padding: 50rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  transition: all 1s ease;
  box-sizing: border-box;
}

/* 设置css */
.user {
  height: 250rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.user_img {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50rpx;
  overflow: hidden;
  text-align: center;
}

.userzonetext {
  flex: 1 1 auto;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 0 50rpx;
}

.user_name {
  font-size: 70rpx;
}

.card {
  border-bottom: 4rpx solid #eee;
  height: 100rpx;
  width: 100%;
  background: #fff;
  display: flex;
}

.card navigator {
  flex: 1;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
}

.right_text {
  flex: 1 1 auto;
  text-align: right;
}