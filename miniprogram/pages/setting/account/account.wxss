/* miniprogram/pages/setting/account/account.wxss */
/* 设置css */

.account {
  width: 100%;
  height: 100vh;
  background: #fff;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.user_img {
  margin: 15rpx auto;
  width: 150rpx;
  height: 150rpx;
  border: 4rpx solid var(--main-color);
  border-radius: 30rpx;
  display: flex;
  flex-direction: row;
  overflow: hidden;
  text-align: center;
}

.user_name {
  margin: 15rpx auto;
  font-size: 40rpx;
  text-align: center;
}

.account_data {
  margin: 15rpx auto;
  display: flex;
  flex-direction: column;
  justify-content: center
}

.detail {
  padding: 15rpx;
  text-align: left;
}

.clean {
  margin: 15rpx auto;
  color: #ed7d31;
}

.logoff {
  margin: 15rpx auto;
  background-color: #ed7d31;
  color: #fff;
}