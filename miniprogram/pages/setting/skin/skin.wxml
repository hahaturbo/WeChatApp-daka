<!-- miniprogram/pages/setting/skin/skin.wxml -->
<view class="skin">
	<view class="skin-swider" bind:touchmove="{{handleTouchMove}}" bind:touchstart="{{handleTouchStart}}" bind:touchend="{{handleTouchEnd}}">
		<view class="skin-image-swider">
			<image src="https://wxdaka.hahaturbo.site/images/skin1.png" />
		</view>
		<view class="skin-image-swider left">
			<image src="https://wxdaka.hahaturbo.site/images/skin2.png" />
		</view>
		<view class="skin-image-swider right">
			<image src="https://wxdaka.hahaturbo.site/images/skin2.png" />
		</view>
	</view>
	<view class="skin-button">
		<view>{{skinNames[index-1]}}</view>
		<view class="choose" wx:if='{{$state.skin==index}}' />
		<view class="nochoose" wx:else bindtap="btn" />
	</view>
</view>

