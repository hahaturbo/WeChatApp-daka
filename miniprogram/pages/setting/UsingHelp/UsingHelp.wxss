/* miniprogram/pages/setting/UsingHelp/UsingHelp.wxss */
.UsingHelp {
  height: 100vh;
  width: 100vw;
  display: flex;
  align-items: center;
  flex-direction: column;
  background-color: #ffffff;
  text-align: center;
}

.tip {
  /* border-top: 2rpx; */
  border-color: black;
  border-style: dashed;
  border-width: 0 0 3rpx 0;
  padding-bottom: 30rpx;
}

.image {
  height: 525px;
  width: 320px;
  margin: 20rpx 0;
}

.text {
  display: flex;
  font-size: 30rpx;
  margin: 10rpx 30rpx;
  text-align: left;
  line-height: 50rpx;
  font-weight: 500;
  flex-direction: row;
}

.text_column{
  flex-direction: column;
}
.Full {
  background: rgb(255, 204, 102);
}

.Not_Full {
  border: solid 4rpx rgb(255, 204, 102);
}

.Bold_Red{
  font-weight: 600;
  color: red;
}