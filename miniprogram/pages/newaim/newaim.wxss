.container {
  /* display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box; */
  border-radius: 50rpx 50rpx 0rpx 0rpx;
  background:#eee;
  align-items: center;
  display: flex;
  flex-direction: column;
} 
.background {
  text-align: center;
  width: 100vw;
  height: 100vh;
  position:fixed; 
  background-size:100% 100%;
  z-index: -2;
}
.select{
  margin-top: 30rpx;
  height: 100rpx;
  width: 75%;
  background: #fff;
  border-radius: 50rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  transition: all 300ms ease;
  justify-content: space-around;
}

button {
  background: initial;
}

button:focus{
  outline: 0;
}

button::after{
  border: none;
}


page {
  background: rgb(250,200,100);
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

 .card {
  margin-top: 10rpx;
  height: 90rpx;
  width: 100%;
  background: #fff;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
  display: flex;
  flex-direction: row;
  align-items: center;
  transition: all 300ms ease;
  box-sizing: border-box;
}

