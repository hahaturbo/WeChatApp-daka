/* pages/newaimcard/newaimcard.wxss */
.displayNone {
  display: none !important;
}
.modifycard {
  height: 90vh;
  width: 100%;
  background-color: #fff;
  border-radius: 50rpx 50rpx 0 0;
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  transition: all 1s ease;
  box-sizing: border-box;
}

.title {
  margin: 30rpx auto;
  height: 80rpx;
  width: 37.5%;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  border: 1rpx solid black;
  border-radius: 50rpx;
  background: var(--main-color);
}


.card {
  box-sizing: border-box;
  border-bottom: 4rpx solid #eee;
  height: 100rpx;
  width: 100%;
  background: #fff;
  display: flex;
  flex-direction:row;
  justify-content: flex-end;
  flex-wrap: nowrap;
  align-items: center;
}
.title-type{
  flex: 1 0 auto;
}

.right_text{
  flex:1 1 auto;
  text-align: right;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}
.name_input{
  flex:0 1 auto;
}
.right_text_unselect {
  color: gray;
}
.btn_invite {
  flex:1;
  text-align: center;
  background-color: var(--main-color);
  padding: 10rpx;
  height: 70rpx;
}
.btn_invite.full {
  background-color: rgb(242, 242, 242);
  color: rgb(127, 127, 127);
}