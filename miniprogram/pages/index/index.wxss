    margin: 30rpx;
    /* margin-top: 30rpx; */
}

.mid-text {
    text-align: left;
    font-size: 44rpx;
    font-weight: bold;
    margin: 10rpx;
    margin-left: 30rpx;
}

.button {
    width: 30%;
    height: 99%;
    background-color: #ff9966;
    border-radius: 30rpx;
    align-items: center;
    display: flex;
}

.buttonNo {
    background-color: #ff996600 !important;
}

.icon {
    width: 100%;
    height: 90%;
}

.button image {
    width: 100%;
    height: 100%;
}

.toFullCard {
    animation: open 1s forwards;
}

.toGoalCard {
    animation: open_goal 1s forwards;
}

.return2Home {
    animation: close 1s forwards;
}

.fadeOut {
    animation: fadeOutAnimation 1s forwards;
}

@keyframes fadeOutAnimation {
    from {
        opacity: 1;
    }

    to {
        opacity: 0;
        display: none;
    }
}

/*就是字面意思啊， 把home页的文字和按钮 消逝掉 */

@keyframes open {
    from {
        opacity: 0;
    }

    to {
        opacity: 1;
        width: 100%;
        height: 100%;
        background-color: #ffffff;
    }
}

@keyframes open_goal {
    from {
        opacity: 0;
    }

    to {
        opacity: 1;
    }
}

@keyframes close {
    to {
        opacity: 1;
        width: 600rpx;
        height: 600rpx;
        /* background-color: var(--main-color); */
    }

    from {
        opacity: 0;
        width: 720rpx;
        height: 100vh;
        background-color: #ffffff;
    }
}

@keyframes closePad {
    to {
        opacity: 1;
        width: 600rpx;
        height: 600rpx;
        background-color: var(--main-color);
    }

    from {
        opacity: 0;
        width: 720rpx;
        height: 100vh;
        background-color: #ffffff;
    }
}

