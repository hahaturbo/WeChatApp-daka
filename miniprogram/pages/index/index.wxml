<!--index.wxml-->
<view class="container">
	<view class="auth {{$state.isLogin ? 'displayNone' : ''}}">
		<!-- <view class="auth "> -->

		<h1>请允许小程序获取你的信息</h1>
		<button open-type='getUserInfo' bindgetuserinfo='checkPermission' id='bn_login'>使用微信登录</button>
		<!-- <text>{{ConsoleText}}</text> -->
	</view>
	<image class='background' src="../../images/background.png" mode="aspectFill">
	</image>
	<mp-dialog title="{{dialogTitle}}" show="{{dialogShow}}" bindbuttontap="tapDialogButton" buttons="{{dialogsButton}}">
		<!-- <view>{{dialogTitle}}</view> -->
	</mp-dialog>
	<view class='down'>
		<image class='downmainimg' src="../../images/down.png" mode="aspectFill"></image>
		<view class="downleft">
			<image class='downimg {{nowPage!=0 ? "displayNone" : ""}}' src="../../images/aim3.png" bindtap="GetCardData"></image>
			<image class='downimg {{nowPage!=1 ? "displayNone" : ""}}' src="../../images/back.png" data-to="0" bindtap="changePage_Back"></image>
			<image class='downimg {{nowPage!=2 ? "displayNone" : ""}}' src="../../images/tick.png" data-to="0" bindtap="changePage"></image>
		</view>
		<view class='downmid {{nowPage==1 ? "downmiddisable" : ""}}'>
			<image class='downmidimg {{nowPage!=0 ? "displayNone" : ""}}' src="../../images/newaim3.png" data-to="1" bindtap="changePage"></image>
			<image class='downmidimg {{nowPage!=1 ? "displayNone" : ""}}' src="../../images/newaim3.png" data-to="1" bindtap="changePage"></image>
			<image class='downmidimg {{nowPage!=2 ? "displayNone" : ""}}' src="../../images/setting3.png" data-to="0" bindtap="changePage"></image>


		</view>

		<view class="downright">
			<image class='downimg {{nowPage!=0 ? "displayNone" : ""}}' src="../../images/setting3.png" data-to="2" bindtap="changePage"></image>

			<image class='downimg {{nowPage!=1 ? "displayNone" : ""}}' src="../../images/finish.png" data-to="0" bindtap="changePage_Finish"></image>

			<image class='downimg {{nowPage!=2 ? "displayNone" : ""}}' src="../../images/aim3.png" data-to="0" bindtap="changePage"></image>


		</view>
	</view>
	<!-- nowPage 默认等于 0 ， 但是你按下 新建打卡 就会变成1 ， 这里判断 如果不等于0了 就添加一个 toFullCard 的 类
         这个类里面 就有动画的样式
         这里的 changedPageCounts 就是为了判断是不是 首次进入首页，如果是第一次进入首页的话 就不会给他添加return2Home的类， 否则就会添加 
         nmd这里n个三元运算符
    -->
	<view class='AllMainCard '>
		<view id="main_container" class='aim_card  {{card_num<3 && nowPage== 0?"":"displayNone"}} {{nowPage != 0 ? "toFullCard" : (changedPageCounts != 0 ? "return2Home" : "")}}' animation="{{open_animation}}">
			<!-- <view> -->
			<view class='home-content {{nowPage!=0 ? "displayNone" : ""}}'>
				<image class='{{card_num==0?"":"displayNone"}}' style=" width:100%;height:100%" src="../../images/mainnew.png" bindtap="gotodetails"></image>
				<!-- <text>isLogin:{{ConsoleText}}</text> -->

				<view class='{{(card_num==1||card_num==2)?"":"displayNone"}}'>
					<text>每天实现一个小目标</text>
					<button class='new_aim_card ' data-to="1" bindtap="changePage"><text>今日打卡</text></button>
				</view>

			</view>

		</view>
	</view>
	<!-- class='AllMainCard'end -->

	<view class='FullScreenCard aim_card {{nowPage != 0 ? "toFullCard" : (changedPageCounts != 0 ? "return2Home" : "")}} {{nowPage==1||nowPage==2 ? "" : "displayNone"}}' animation="{{open_animation}}">
		<!-- <view class=' containerB {{nowPage==1 ? "displayBlock" : "displayNone"}}'> -->
		<view class=' containerB {{nowPage==1 ? "" : "displayNone"}}'>
			<newaimcard></newaimcard>

			<!-- </view> -->
		</view>
		<!-- nowpage 1 end -->
		<view class=' containerB {{nowPage==2 ? "" : "displayNone"}}'>
		<setting></setting>
		</view>
	</view>

	<!-- <view>456</view> -->


</view>