    flex-direction: row;
    align-items: left;
    transition: all 300ms ease;
    box-sizing: border-box;
  }

  page .containerB text {
    /* newaim */
    /* margin: 20rpx; */
    margin-left: 20rpx;
    line-height: 50rpx;
    text-align: center;
    font-size: 20rpx;
    /* position: relative; */
  }

  /* 整一个下部导航栏定义 */
  page .down {
    width: 100vw;
    height: 10vh;
    bottom: 0px;
    display: flex;
    justify-content: space-around;
    align-items: center;
    position: fixed;
    z-index: 10;
    flex-direction: row;
  }

  page .downmainimg {
    width: 100vw;
    height: 10vh;
    bottom: 0px;
    position: fixed;
    z-index: -1;

    align-items: center;
    display: flex;
    justify-content: space-around;
  }

  page .downleft {
    margin: 0px;
    width: 25vw;
    height: 10vh;
    align-items: center;

    align-items: center;
    display: flex;
    justify-content: space-around;
  }

  page .downright {
    margin: 0px;
    width: 25vw;
    height: 10vh;

    align-items: center;
    display: flex;
    justify-content: space-around;
  }

  /* 中圈 */
  page .downmid {
    width: 20vw;
    height: 20vw;
    background: rgb(255, 255, 255);
    border-radius: 50%;
    border-style: solid;
    border-color: var(--main-color);
    border-width: 1vw;
    bottom: 5vh;
    position: relative;

    align-items: center;
    display: flex;
    justify-content: space-around;
  }

  page .downmidshadow {
    width: 18vw;
    height: 7vw;
    top:-80rpx;
    border-radius:  20vw  20vw 0 0;
    border-style: solid;
    border-color: var(--main-color);
    border-width: 2vw;
    bottom: 5vh;
    position: absolute;
    box-shadow: 0rpx 0rpx 30rpx 15rpx #888888;
  }

  .downmiddisable {
    background: var(--main-color) !important;
  }




  /* 导航栏图片统一定义 */
  page .downimg {
    width: 100rpx;
    height: 100rpx;
    /* text-align: center; */
    top: 1vw;
    /* left: 3vw; */
    position: relative;
  }

  page .downmidimg {
    width: 110rpx;
    height: 110rpx;
    top: 0rpx;
    position: relative;
  }

}

